<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <View
            android:id="@+id/viewHeight0"
            android:layout_width="0dp"
            android:layout_height="80dp"/>

    <ImageView
            android:id="@+id/plateImage"
            android:layout_below="@+id/viewHeight0"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dd_logo"
            android:layout_centerHorizontal="true"/>

    <View
            android:id="@+id/viewHeight1"
            android:layout_below="@+id/plateImage"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/foodType"
            android:layout_below="@+id/viewHeight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chinese"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            app:fontFamily="@font/comfortaa"/>
    <View
            android:id="@+id/viewHeight2"
            android:layout_below="@+id/foodType"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

    <EditText
            android:id="@+id/newFoodText"
            android:layout_below="@+id/viewHeight2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_new_food"
            android:fontFamily="@font/comfortaa"/>
    <Button
            android:id="@+id/addFoodButton"
            android:layout_below="@+id/newFoodText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="@string/add_food"
            android:background="@color/colorAccent"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/decideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="@font/comfortaa"
            android:text="@string/decide"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
    />

</RelativeLayout>